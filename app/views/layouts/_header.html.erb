<header>
	<ul>
	  <% if current_user %>
			<li class="purple"><%= link_to "How It Works", how_it_works_path %></li>
	    <li class="purple"> Hello, <%= link_to current_user.first_name, user_path(current_user.id) %></li>
	    <li class="purple"><%= link_to "Log out", logout_path, method: "delete" %></li>
	  <% else %>
			<li class="purple"><%= link_to "How It Works", how_it_works_path %></li>
		  <li class="purple"><span class="trigger">Log in</mark></li>
	    <li class="purple"><span class="trigger">Sign-up</mark></li>
	  <% end %>
		<%= link_to image_tag('logo.png'), root_path, class: 'logo' %>
	</ul>
</header>
<div class="tag-line">
  Join others. Buy in bulk. Pay wholesale.
</div>
<div class="modal">
	<%= render 'sessions/form' %>
	<%= render 'users/form' %>
</div>
