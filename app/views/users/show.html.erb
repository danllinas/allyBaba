<% provide(:title, @user.first_name) %>
<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<%= @user.first_name %><br>
<%= @user.last_name %><br>
<%= @user.email %><br>
<%= link_to 'Edit User Information', edit_user_path %><br>
<%= link_to 'Delete Account', current_user, method: :delete, data: { confirm: 'Are you sure you want to destroy your account?'} %>



<h1>My Created Deals</h1>
<p><%= link_to "Create A Deal!", new_deal_path %></p>
<% current_user.deals.each do |deal| %>
  <ul>
    <%= image_tag deal.image %>
    <li><strong>Deal Title: </strong><%= link_to deal.title, deal %></li>
    <li>URL: <%= deal.url %></li>
    <li>Deal expiration: <%= l deal.deal_expiration, format: :long %></li>
    <li>Wholesale Price: <%= deal.wholesale_price %></li>
    <li>Retail Price: <%= deal.retail_price %></li>
    <li>Organizer: <%= deal.organizer.first_name %></li>
    <li>Contact Organizer: <%= deal.organizer.email %></li>
    <li>Estimated Delivery: <%= l deal.estimated_delivery, format: :long %></li>
    <li>Total Bids: <%= deal.total_bids %></li>
  </ul>
<% end %>
