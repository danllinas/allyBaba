<p><%= link_to "Create A Deal!", new_deal_path %></p>

<br>

<% current_user.deals.each do |deal| %>
<div id="my_deal">
    <%= link_to deal.title, deal %> <br>
    <%= image_tag deal.image %><br>
    URL: <%= deal.url %><br>
    Deal expiration: <%= l deal.deal_expiration, format: :long %><br>
    Wholesale Price: <%= deal.wholesale_price %><br>
    Retail Price: <%= deal.retail_price %><br>
    Organizer: <%= deal.organizer.first_name %><br>
    Contact Organizer: <%= deal.organizer.email %><br>
    Estimated Delivery: <%= l deal.estimated_delivery, format: :long %><br>
    Minimum Bids: <%= deal.minimum_bids %><br>
    Total Bids: <%= deal.total_bids %><br>
    Progress: <%= number_to_percentage(progress( deal.total_bids, deal.minimum_bids), precision: 0) %>
  </div>
<br><br>
<% end %>

<br>
<h1>Deals I've Joined</h1>
<% current_user.orders.each do |order| %>
<figcaption>
  <ul>
    <li><%= order.deal.title %></li><br>
    <%= image_tag order.deal.image %><br>
    <li>URL: <%= order.deal.url %></li><br>
    <li>Expiration: <%= order.deal.deal_expiration %></li><br>
    <li>Wholesale Price: <%= order.deal.wholesale_price %></li><br>
    <li id= "Retail">Retail Price: <%= order.deal.retail_price %></li><br>
    <li>Message Organizer: <%= link_to order.deal.organizer.email %></li><br>
    <li>Esitmated Delivery: <%= l order.deal.estimated_delivery, format: :long %></li><br>
    <li>Minimum Bids: <%= order.deal.minimum_bids %></li><br>
    <li>Total Bids: <%= order.deal.total_bids %></li><br>
    <li>Progress: <%= number_to_percentage(progress( order.deal.total_bids, order.deal.minimum_bids), precision: 0) %></li><br>
  <br>
  </ul>
</figcaption>
  <br>
<% end %>
<hr>
