<div>
  <div>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages_user' %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name %><br>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %><br>

      <%= f.label :email %>
      <%= f.email_field :email %><br>

      <%= f.label :password %>
      <%= f.password_field :password %><br>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation %><br>
      <%= f.label :address1, "Shipping Address" %>
      <%= f.text_field :address1 %><br>
      <%= f.label :address2, 'Shipping Address 2' %>
      <%= f.text_field :address2 %><br>
      <%= f.label :city %>
      <%= f.text_field :city %><br>
      <%= f.label :state %>
      <%= select_tag :state, options_for_select(us_states)%><br>
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode %><br>
      <%= f.submit %>
    <% end %>
  </div>

</div>
