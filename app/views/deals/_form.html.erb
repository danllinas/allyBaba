<div>
  <div>
    <%= simple_form_for(@deal) do |f| %>
      <%= render 'shared/error_messages_deal' %>

      <%= f.input :url %>
      <%= f.input :title %>
      <%= f.input :image %>
      <%= f.input :retail_price_cents %>
      <%= f.input :wholesale_price_cents %>
      <%= f.input :minimum_bids %>
      <%= f.input :estimated_delivery %>
      <%= f.input :delivery_method %>
      <%= f.input :shipping_address1 %>
      <%= f.input :shipping_address2 %>
      <%= f.input :city %>
      <%= f.input :state %>
      <%= f.input :cc_info %>
      <%= f.input :zipcode %>

      <%= f.button :submit %>
    <% end %>
  </div>
</div>
