<%= provide(:title, "Deals") %>
<hr>
<h1>DEALS</h1>
<hr>

<p>
  Let us attempt to automagically create your deal!
</p>
<%= form_tag root_path, method: 'get' do %>
  <p>
    <%= label_tag(:search, "Enter the URL:") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<% if params[:search] && params[:search].blank? == false %>
  <h1>Here is your automagical deal:</h1>
  <%= image_tag(image) %><br>
  <%= title %><br>
  <%= price_range %><br>
  <%= description %><br>
<% end %>

