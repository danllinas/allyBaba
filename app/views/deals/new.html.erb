<%= provide(:title, "New Deal") %>
<h1>Create a New Deal</h1>
<div>
  <div>
    <%= form_for(@deal) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.label :title %>
      <%= f.text_field :title %>
#pick up here!!!
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.select :state, options_for_select(us_states) %>

      <%= f.submit %>
    <% end %>
  </div>
</div>
